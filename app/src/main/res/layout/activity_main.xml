<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="@dimen/boton_Izqui"
        android:layout_height="wrap_content"
        android:text="@string/boton_Izq"
        android:layout_marginTop="@dimen/margin_top"
       android:layout_marginStart="@dimen/marig_izq"
       android:layout_marginEnd="@dimen/margin_dere"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="@dimen/boton_Izqui"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/boton2_izq"
        android:layout_marginTop="@dimen/margin_top"
        android:text="@string/boton_derecha" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="@dimen/margin_text1_top"
        android:background="@android:color/holo_blue_bright"
        android:gravity="center"
        android:text="@string/textview1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_size"
        android:fontFamily="sans-serif"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="278dp"
        android:layout_marginTop="370dp"
        android:contentDescription="@string/todo"
        android:textAlignment="center"
        android:textDirection="inherit"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />


</RelativeLayout>